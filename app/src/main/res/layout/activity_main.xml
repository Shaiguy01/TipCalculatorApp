<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!--add color later-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:text="Bill" />

    <EditText
        android:id="@+id/et_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0096FF"
        android:ems="10"
        android:hint="100.00"
        android:inputType="numberDecimal"
        android:text=""
        android:textSize="32dp" />

    <!--add color later-->
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blue"

        android:text="Tip %" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b_tip_minus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/blue"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="45sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_height="wrap_content"
            android:text="0%" />

        <Button
            android:id="@+id/b_tip_plus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/blue"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="32sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textAlignment="center"
        android:textColor="@color/blue"

        android:text="People" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b_people_minus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/blue"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="45sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_people"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/b_people_plus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/blue"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="32sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/b_calculate"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:background="@drawable/roundcorners"
        android:textColor="@color/white"

        android:text="Calculate" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"

        android:text="Tip" />

    <TextView
        android:id="@+id/tv_tip_output"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Calculate" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"

        android:text="Total" />

    <TextView
        android:id="@+id/tv_total_output"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Calculate"  />

</LinearLayout>